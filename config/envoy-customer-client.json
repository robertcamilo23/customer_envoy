{
  "listeners": [
    {
      "address": "tcp://0.0.0.0:50051",
      "filters": [
        {
          "type": "read",
          "name": "http_connection_manager",
          "config": {
            "codec_type": "auto",
            "stat_prefix": "egress_http",
            "access_log": [
              {
                "path": "/var/log/envoy/admin_access.log"
              }
            ],
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "client_routes",
                  "domains": ["*"],
                  "routes": [
                    {
                      "prefix": "/",
                      "cluster": "customer_server"
                    }
                  ]
                }
              ]
            },
            "filters": [
              {
                "type": "decoder",
                "name": "router",
                "config": {}
              }
            ]
          }
        }
      ]
    }
  ],
  "admin": {
    "access_log_path": "/var/log/envoy/admin_access.log",
    "address": "tcp://0.0.0.0:9901"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "customer_server",
        "type": "static",
        "lb_type": "round_robin",
        "connect_timeout_ms": 250,
        "hosts": [{"url": "tcp://127.0.0.1:50052"}]
      }
    ]
  }
}