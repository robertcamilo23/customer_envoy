{
  "listeners": [
    {
    "address": "tcp://127.0.0.1:50051",
    "filters": [
      {
      "type": "read",
      "name": "http_connection_manager",
      "config": {
        "codec_type": "http2",
        "stat_prefix": "Andres",
        "route_config": {
          "virtual_hosts": [{
            "name": "Andres2",
            "domains": ["*"],
            "routes": [{
              "prefix": "/",
              "cluster": "customer_server"
            }]
          }]
        },
        "filters": [{
          "type": "decoder",
          "name": "router",
          "config": {}
        }],
        "access_log": [{
          "path": "/var/log/envoy/admin_access.log"
        }]
      }
    }]
  }],
  "admin": {
    "access_log_path": "/var/log/envoy/admin_access.log",
    "address": "tcp://0.0.0.0:9901"
  },
  "cluster_manager": {
    "clusters": [{
      "name": "customer_server",
      "connect_timeout_ms": 250,
      "type": "static",
      "lb_type": "round_robin",
      "features": "http2",
      "hosts": [{
        "url": "tcp://192.168.20.6:50052"
      }]
    }]
  }
}
