{
  "listeners": [
    {
    "address": "tcp://0.0.0.0:8181",
    "filters": [
      {
      "type": "read",
      "name": "http_connection_manager",
      "config": {
        "codec_type": "http1",
        "stat_prefix": "ingress_http",
        "route_config": {
          "virtual_hosts": [{
            "name": "serviceA",
            "domains": ["*"],
            "routes": [{
              "prefix": "/servicea",
              "cluster": "service_a"
            },{
              "prefix": "/serviceb",
              "cluster": "service_b"
            }]
          }]
        },
        "filters": [{
          "type": "decoder",
          "name": "router",
          "config": {}
        }],
        "access_log": [{
          "path": "/var/log/envoy/admin_access.log"
        }]
      }
    }]
  }],
  "admin": {
    "access_log_path": "/var/log/envoy/admin_access.log",
    "address": "tcp://0.0.0.0:9901"
  },
  "cluster_manager": {
    "clusters": [{
      "name": "service_a",
      "connect_timeout_ms": 250,
      "type": "static",
      "lb_type": "round_robin",
      "hosts": [{
        "url": "tcp://192.168.6.237:8081"
      }]
    },{
      "name": "service_b",
      "connect_timeout_ms": 250,
      "type": "static",
      "lb_type": "round_robin",
      "hosts": [{
        "url": "tcp://192.168.6.237:8082"
      }]
    }]
  }
}