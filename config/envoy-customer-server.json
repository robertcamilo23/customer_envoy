{
  "listeners": [
    {
      "address": "tcp://0.0.0.0:50052",
      "filters": [
        {
          "type": "read",
          "name": "http_connection_manager",
          "config": {
            "codec_type": "http2",
            "stat_prefix": "ingress_http",
            "access_log": [
              {
                "path": "/var/log/envoy/admin_access.log"
              }
            ],
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "customer_service",
                  "domains": ["*"],
                  "routes": [
                    {
                      "path": "/com.customer.protos.CustomerPlan/associateCustomerToPlan",
                      "cluster": "customer_service_grpc"
                    }
                  ]
                }
              ]
            },
            "filters": [
              { 
                "type": "both",
                "name": "grpc_web",
                "config": {}
              },
              {
                "type": "decoder",
                "name": "router",
                "config": {}
              }
            ]
          }
        }
      ]
    }
  ],
  "admin": {
    "access_log_path": "/var/log/envoy/admin_access.log",
    "address": "tcp://0.0.0.0:9902"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "customer_service_grpc",
        "connect_timeout_ms": 250,
        "type": "static",
        "lb_type": "round_robin",
        "features": "http2",
        "hosts": [
          {
            "url": "tcp://127.0.0.1:50053"
          }
        ]
      }

    ]
  }
}